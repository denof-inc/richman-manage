{
  "name": "richman-manage",
  "version": "0.1.0",
  "description": "不動産管理システム - Web MVP Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:check": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "npm run format && npm run lint:fix && npm run lint:check",
    "test": "turbo run test",
    "quality:check": "npm --workspaces=false run format:check && npm --workspaces=false run lint:check && npm --workspaces=false run typecheck && npm --workspaces=false run test",
    "openapi:emit": "curl -sS http://localhost:3000/api/openapi -o packages/generated/openapi.json",
    "openapi:emit:node": "cd apps/web && npx tsx scripts/openapi-emit.ts",
    "openapi:types": "openapi-typescript packages/generated/openapi.json -o packages/generated/schema.d.ts",
    "openapi:lint": "redocly lint packages/generated/openapi.json || spectral lint packages/generated/openapi.json",
    "openapi:diff": "redocly diff packages/generated/prev.json packages/generated/openapi.json || true",
    "client:gen": "node scripts/generate-openapi-client.mjs",
    "typecheck": "turbo run typecheck",
    "dev:web": "npm --workspace apps/web run dev",
    "build:web": "npm --workspace apps/web run build",
    "prepare": "node -e \"try{require.resolve('husky');process.exit(0)}catch(e){process.exit(1)}\" && husky install || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denof-inc/richman-manage.git"
  },
  "keywords": [
    "property",
    "management",
    "real-estate"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/denof-inc/richman-manage/issues"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx}": [
      "npx prettier --write"
    ],
    "apps/web/src/**/*.{ts,tsx,jsx}": [
      "cd apps/web && npx eslint --fix --rule 'tailwindcss/classnames-order: error'"
    ],
    "packages/ui/src/**/*.{ts,tsx,jsx}": [
      "cd packages/ui && npx eslint --fix --rule 'tailwindcss/classnames-order: error'"
    ],
    "packages/utils/src/**/*.{ts,tsx,jsx}": [
      "cd packages/utils && npx eslint --fix --rule 'tailwindcss/classnames-order: error'"
    ]
  },
  "homepage": "https://github.com/denof-inc/richman-manage#readme",
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@supabase/ssr": "^0.6.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-turbo": "^2.5.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "lint-staged": "^15.2.0",
    "tailwindcss": "^3.3.3",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "openapi-typescript": "^7.4.2",
    "@redocly/cli": "^1.28.2",
    "@stoplight/spectral-cli": "^6.11.1"
  },
  "dependencies": {}
}
